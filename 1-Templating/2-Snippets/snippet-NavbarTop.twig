<div class="NavbarTop">

	{# Logo block #}
	<div class="NavbarTop-logoBlock">
		<a href="{{ site.url }}">
			<img srcset="{{ logo_image_large.get_url }} {{ logo_image_large.width ~ 'w' }}, {{ logo_image_medium.get_url }} {{ logo_image_medium.width ~ 'w' }}, {{ logo_image_small.get_url }} {{ logo_image_small.width ~ 'w' }}" sizes="(min-width: 1200px) {{ logo_image_large.width ~ 'px' }}, (min-width: 600px) {{ logo_image_medium.width ~ 'px' }}, (min-width: 0px) {{ logo_image_small.width ~ 'px' }}" alt="Ivan Juras Logo"/>
		</a>
		<div class="HamburgerButton">
			Menu <i class="fa fa-bars"></i>
		</div>
	</div>

	{# Menu block #}
	<nav class="NavbarTop-menuBlock">
		<ul>
			{% for menu in header_menu.get_items %}
			<li class="NavbarTop-menuItem">
				<a class="NavbarTop-menuLink" href="{{ menu.get_link }}">
					{{ menu.title }}
				</a>
			</li>
			{% endfor %}
		</ul>
	</nav>

</div>